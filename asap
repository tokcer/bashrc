case $- in
    *i*) ;;
    *) return ;;
esac

trap 'echo -e "\n\e[1;31m[!] Santai bang, ASAP DISINI !!!\e[0m\n"; continue' INT

expected_hash="9554cfc82318a8fb3581e7eb7da32698f667109a3cd895b11b876383b8d4c1f9"
input_hash=""

echo -e "\e[1;36m======================================\e[0m"
echo -e "   \e[1;33mMAU NGAPAIN ! ASAP HERE !!!!\e[0m"
echo -e "\e[1;36m                  â†“â†“â†“                   \e[0m"
echo -e "\e[1;35m  ASAP ! :\e[0m \e[1;36mDISINI !\e[0m"
echo -e "\e[1;36m======================================\e[0m"

while [[ "$input_hash" != "$expected_hash" ]]; do
    echo -ne "\e[1;36m[+] Masukkan Password: \e[0m"
    read -s input_pass
    echo
    input_hash=$(echo -n "$input_pass" | sha256sum | awk '{print $1}')

    if [[ "$input_hash" != "$expected_hash" ]]; then
        echo -e "\e[1;31m[!] AWOKAWOKAWOK , NGAPAIN DEK ?\e[0m"
    fi
done

echo -e "\n\e[1;32m[SUCCESS] Akses diterima!\e[0m"
sleep 1

